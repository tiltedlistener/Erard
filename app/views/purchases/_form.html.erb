<%= form_for @purchase, :remote=>true, :html => { :id => @form_name } do |f| %>
	<%= f.label "Title" %>
	<%= f.text_field :title, :size => 80 %>
	<%= f.label "Price" %>
	<%= f.number_field :price, :min => 0, :step => 0.01 %>

	<%= render :partial =>'shared/student_select' %>

	<div class="submit-load-group">
		<%= f.submit %>
		<%= render :partial =>'shared/form_loader' %>
	</div>
	<%= render :partial =>"shared/form_error" %>
	<%= render :partial =>'shared/success' %>
<% end %>
