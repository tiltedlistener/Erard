<!DOCTYPE html>
<html>
<head>
  <title>Erard - The Piano Teacher Helper</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>  
  <%= csrf_meta_tags %>
  <%= favicon_link_tag 'favicon.ico' %>
</head>
<body class="<%= @controller %> <%= @action %>">
	<div id="wrapper">
		<header id="main-header">
			<div id="main-header-inner">
				<div id="logo">
					<h1><%= link_to 'Erard', (@logged_in) ? dashboards_path : root_path %></h1>
				</div>
				<div id="log-group">
					<% if @logged_in -%>
						<%= link_to "Logout", logout_path %>
					<% else -%>
						<%= link_to "Login", login_path %>	
					<% end -%>
				</div>
			</div>
		</header>
		<div id="page">
			<% if flash[:alert] -%>
				<div class="alert"><%= flash[:alert] %></div>
			<% end -%>
			<%= yield %>
		</div>
		<footer id="main-footer">

		</footer>
	</div>
	<div id="lightbox-wrapper">
			<div id="lightbox-content">
				Filler
			</div>
	</div>
	<div id="lightbox">
		
	</div>


</body>
  <% # Support Variables for initializing Javascript %>
  <script type="text/javascript">
  	App.Page = {};
  	App.Page.Controller = "<%= @controller %>";
  	App.Page.Method = "<%= @method %>";
  	App.Page.ParamID = "<%= @id %>";
  </script>
</html>
